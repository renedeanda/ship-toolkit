    },
    {
      "name": "ship-seo",
      "description": "Set up meta tags, sitemap, robots.txt - complete SEO optimization",
      "file": "commands/ship-seo.md",
      "category": "seo",
      "estimatedTime": "45 min saved"
    },
    {
      "name": "ship-perf",
      "description": "Optimize images, performance, Core Web Vitals using Lighthouse",
